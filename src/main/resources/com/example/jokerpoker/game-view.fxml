<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="645.0" prefWidth="1020.0" stylesheets="@room.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jokerpoker.GameController">
   <children>
      <!-- 等待游戏开始pane -->
      <Pane fx:id="waitingPane" prefHeight="645.0" prefWidth="1200.0" visible="true">
         <children>
            <Text fx:id="waitingTips" layoutX="440.0" layoutY="300.0">正在等待其它玩家进入房间，请稍候...</Text>
         </children>
      </Pane>

      <!-- 游戏结束pane -->
      <Pane fx:id="gameOverPane" prefHeight="645.0" prefWidth="1200.0" visible="false">
   <children>
            <!-- 胜利者信息 -->
            <Text fx:id="winnerInfo" layoutX="500.0" layoutY="230.0" />
            <Button fx:id="backLobbyButton" layoutX="550" layoutY="260">返回大厅</Button>
   </children>
      </Pane>

      <!-- 游戏pane -->
      <Pane fx:id="playingPane" disable="true" prefHeight="645.0" prefWidth="1200.0" visible="true">
   <children>
            <Pane styleClass="top">
               <children>
                  <!-- 底牌pane -->
                  <Pane fx:id="dipai" layoutX="350" layoutY="0" />
      
                  <!-- 退出按钮 -->
                  <Button fx:id="quitButton" layoutX="1000" />
               </children>
            </Pane>
   
            <Pane layoutX="0" layoutY="150" styleClass="middle">
      <children>
                  <!-- 上游玩家pane -->
                  <Pane fx:id="prevPlayerPane">
                     <children>
                        <!-- 上游玩家角色 -->
                        <Label fx:id="prevPlayerRole" layoutY="110" />
         
                        <!-- 上游玩家昵称 -->
                        <Label fx:id="prevPlayerNickname" layoutX="60" layoutY="110" />
         
                        <!-- 上游玩家头像 -->
                        <ImageView layoutX="60">
            <image>
                              <Image backgroundLoading="true" url="@bg/close.png" />
            </image>
                           <fitWidth>100</fitWidth>
                           <fitHeight>100</fitHeight>
                           <clip>
                              <Circle centerX="50" centerY="50" fill="aqua">
                                 <radius>50</radius>
                              </Circle>
                           </clip>
                        </ImageView>
         
                        <Pane fx:id="prevPlayerPokersPane" layoutX="180" layoutY="20" styleClass="rearPoker" visible="false">
            <children>
                              <Label layoutX="15" layoutY="18" styleClass="pokerCount">0</Label>
            </children>
                        </Pane>
         
                        <Pane fx:id="prevPlayerShowPane" layoutX="240">
            <children>
                              <!-- 倒计时显示框 -->
                              <Label layoutY="35" styleClass="timer" visible="false">25</Label>
            
                              <!-- 提示pane -->
                              <Label layoutY="35" styleClass="tips" visible="false" />
            
                              <Pane fx:id="prevPlayerShowPokersPane" />
            </children>
                        </Pane>
                     </children>
                  </Pane>
      
                  <!-- 下游玩家pane -->
                  <Pane fx:id="nextPlayerPane" layoutX="600" layoutY="0">
         <children>
                        <!-- 下游玩家角色 -->
                        <Label fx:id="nextPlayerRole" layoutX="430" layoutY="110" />
         
                        <!-- 下游玩家昵称 -->
                        <Label fx:id="nextPlayerNickname" layoutX="490" layoutY="110" />
         
                        <!-- 下游玩家头像 -->
                        <ImageView layoutX="490">
            <image>
                              <Image backgroundLoading="true" url="@bg/close.png" />
            </image>
                           <fitWidth>100</fitWidth>
                           <fitHeight>100</fitHeight>
                           <clip>
                              <Circle centerX="50" centerY="50" fill="aqua">
                                 <radius>50</radius>
                              </Circle>
                           </clip>
                        </ImageView>
         
                        <Pane fx:id="nextPlayerPokersPane" layoutX="380" layoutY="20" styleClass="rearPoker" visible="false">
            <children>
                              <Label layoutX="15" layoutY="18" styleClass="pokerCount">0</Label>
            </children>
                        </Pane>
         
                        <Pane fx:id="nextPlayerShowPane" layoutX="-1.0">
            <children>
                              <!-- 倒计时显示框 -->
                              <Label layoutX="315" layoutY="35" styleClass="timer" visible="false" />
            
                              <!-- 提示pane -->
                              <Label layoutX="305" layoutY="35" styleClass="tips" visible="false">不出</Label>
            
                              <Pane fx:id="nextPlayerShowPokersPane" />
            </children>
                        </Pane>
         </children>
                  </Pane>
      </children>
            </Pane>
   
            <Pane layoutX="0" layoutY="290" styleClass="bottom">
      <children>
                  <!-- 当前玩家pane -->
                  <Pane fx:id="playerPane">
                     <children>
                        <!-- 抢地主按钮 -->
                        <Button fx:id="robButton" layoutX="555" layoutY="130" visible="false" />
                        <!-- 不抢地主按钮 -->
                        <Button fx:id="notRobButton" layoutX="655" layoutY="130" visible="false" />
                        <!-- 出牌按钮 -->
                        <Button fx:id="submitButton" layoutX="555" layoutY="130" visible="false">出牌</Button>
                        <!-- 不出牌按钮 -->
                        <Button fx:id="passButton" layoutX="655" layoutY="130" visible="false">不出</Button>
         
                        <Pane fx:id="playerShowPane" layoutX="200">
            <children>
                              <!-- 倒计时显示框 -->
                              <Label layoutX="405" layoutY="35" styleClass="timer" visible="false" />
            
                              <Label layoutX="330" layoutY="100" styleClass="error-tips" visible="false" />
            
                              <!-- 提示pane -->
                              <Label layoutX="365" layoutY="0" styleClass="primary-tips" visible="false" />
            
                              <!-- 出牌pane -->
                              <Pane fx:id="playerShowPokersPane" />
            </children>
                        </Pane>
         
                        <!-- 当前玩家角色 -->
                        <Label fx:id="playerRole" layoutX="25" layoutY="315" />
                        <Label fx:id="playerNickname" layoutX="75" layoutY="315" />
         
                        <!-- 当前玩家头像 -->
                        <ImageView layoutX="75" layoutY="205">
            <image>
                              <Image backgroundLoading="true" url="@bg/close.png" />
            </image>
                           <fitWidth>100</fitWidth>
                           <fitHeight>100</fitHeight>
                           <clip>
                              <Circle centerX="50" centerY="50" fill="aqua">
                                 <radius>50</radius>
                              </Circle>
                           </clip>
                        </ImageView>
         
                        <!-- 牌显示pane -->
                        <Pane fx:id="layeredPane" layoutX="200.0" layoutY="195.0" prefHeight="150.0" styleClass="pokers" />
                        <Pane fx:id="front" layoutX="461.0" layoutY="125.0" prefHeight="58.0" prefWidth="264.0" />
                     </children>
                  </Pane>
      </children>
            </Pane>
   </children>
      </Pane>
   </children>
</AnchorPane>
